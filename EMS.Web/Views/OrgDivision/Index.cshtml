@model IEnumerable<EMS.Domain.ViewModels.OrgDivisionView>
@{
    ViewData["Title"] = "Organization Divisions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Organization Divisions</h1>

<form method="get" asp-controller="OrgDivision" asp-action="Index">
    <input type="text" name="searchTerm" placeholder="Search..." value="@ViewContext.HttpContext.Request.Query["searchTerm"]" />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Create By</th>
            <th>Create Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var division in Model)
        {
            <tr>
                <td>@division.Name</td>
                <td>@division.CreateByName</td>
                <td>@division.CreateDate</td>
                <td>
                    <a asp-controller="OrgDivision" asp-action="UpdateOrgDivision" asp-route-id="@division.Id" class="btn btn-primary">Update</a>
                    <button type="button" class="btn btn-danger deleteButton" data-id="@division.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.querySelectorAll('.deleteButton').forEach(button => {
            button.addEventListener('click', function () {
                const divisionId = this.getAttribute('data-id');
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Create a form element
                        const form = document.createElement('form');
                        form.method = 'post';
                        form.action = '/deleteOrgDivision'; // URL of your delete action

                        // Create input element for orgDivId
                        const input = document.createElement('input');
                        input.type = 'hidden';
                        input.name = 'orgDivId';
                        input.value = divisionId;

                        // Append input element to form
                        form.appendChild(input);

                        // Append form to document body and submit it
                        document.body.appendChild(form);
                        form.submit();
                    }
                });
            });
        });
    </script>
}


