@model IEnumerable<EMS.Domain.ViewModels.DepartmentView>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Of Department</h2>

<form method="get" asp-controller="Department" asp-action="Index">
    <input type="text" class="mb-2" name="searchTerm" placeholder="Search..." value="@ViewContext.HttpContext.Request.Query["searchTerm"]" />
    <button type="submit">Search</button>
</form>

<table class="table">
    <a asp-controller="Department" asp-action="AddDepartment" class="btn btn-primary">Add New</a>
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Department Code</th>
            <th>Division Name</th>
            <th>Create By</th>
            <th>Create Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentName</td>
                <td>@department.DepartmentCode</td>
                <td>@department.OrgDivisionName</td>
                <td>@department.CreateBy</td>
                <td>@department.CreateDate</td>
                <td>
                    <a asp-controller="Department" asp-action="UpdateDepartment" asp-route-id="@department.Id" class="btn btn-primary">Update</a>

                    @*<button type="button" class="btn btn-danger deleteButton" data-value="@department.Id" data-param-name="deptId" data-delete-url="@Url.Action("DeleteDepartment", "Department")">Delete</button>*@

                    <button type="button" class="btn btn-danger deleteButton" data-value="@department.Id" data-delete-url="@Url.Action("DeleteDepartment", "Department")">Delete</button>


                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/deleteconfirmation.js"></script>
}

