@using EMS.Domain.ViewModels;
@model EMS.Domain.DtoModels.DepartmentDto
@{
    ViewData["Title"] = "AddDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Department</h1>

<form asp-action="AddDepartment" method="post">
    <div class="form-group">
        <label asp-for="OrgDivisionId" class="control-label"></label>
        @{
            var orgDivisions = ViewBag.OrgDivisions as List<OrgDivisionView>;
            if (orgDivisions == null || !orgDivisions.Any())
            {
                <select disabled class="form-control">
                    <option>-- No divisions available --</option>
                </select>
                <span class="text-danger">No divisions available. Please add org Division or contact the administrator to notify this issue.</span>
            }
            else
            {
                <select asp-for="OrgDivisionId" class="form-control" asp-items="@(new SelectList(orgDivisions, "Id", "Name"))">
                    <option value="">-- Select Division --</option>
                </select>
                <span asp-validation-for="OrgDivisionId" class="text-danger"></span>
            }
        }
    </div>
    <div class="form-group">
        <label asp-for="DepartmentName" class="control-label"></label>
        <input asp-for="DepartmentName" class="form-control" />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentCode" class="control-label"></label>
        <input asp-for="DepartmentCode" class="form-control" />
        <span asp-validation-for="DepartmentCode" class="text-danger"></span>
    </div>
    @*<div class="form-group">
        <input type="submit" value="Add Department" class="btn btn-primary" />
    </div>*@

    <button type="submit" class="btn btn-primary">Save</button>
</form>



